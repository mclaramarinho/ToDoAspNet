@{
    string translateStatus(string abbr)
    {
        return abbr == "TD" ? "To Do" : abbr == "DO" ? "Doing" : "Finished";
    }
}

@model TaskItem;
<div id="overlay" class="position-fixed top-0 start-0 z-5" style="width: 100vw; height: 100vh; background-color: #343232; opacity: 0.5;"></div>

<div class="position-fixed w-100 top-50 z-1 start-50 translate-middle bg-light p-3 rounded" style="max-width:500px;" >
    
    <div class="modal-content">
        <div class="modal-header justify-content-between mb-3">
            <h5 class="modal-title">Are you sure you want to delete this task?</h5>
            <a class="btn-close" asp-action="Index" asp-controller="Tasks"></a>
        </div>
        <div class="modal-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.TaskTitle)</th>
                        <th>@Html.DisplayNameFor(model => model.TaskDescription)</th>
                        <th>@Html.DisplayNameFor(model => model.Status)</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Html.DisplayFor(model => model.TaskTitle)</td>
                        <td class="text-truncate">@Html.DisplayFor(model => model.TaskDescription)</td>
                        <td>@translateStatus(Model.Status)</td>
                    </tr>
                </tbody>
            </table>
            <p class="text-danger">This action can't be undone!</p>
        </div>
        <div class="modal-footer">
            <form asp-action="Delete" asp-controller="Tasks" asp-route-id="@Model.TaskID" method="post">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
</div>
<div class="modal fade in" tabindex="-1" aria-hidden="false" id="confirmDeleteModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Are you sure you want to delete this task?</h5>
                <button type="button" class="btn-close" asp-action="Index" asp-controller="Tasks"
                        data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.TaskTitle)</th>
                            <th>@Html.DisplayNameFor(model => model.TaskDescription)</th>
                            <th>@Html.DisplayNameFor(model => model.Status)</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Html.DisplayFor(model => model.TaskTitle)</td>
                            <td>@Html.DisplayFor(model => model.TaskDescription)</td>
                            <td>@Html.DisplayFor(model => model.Status)</td>
                        </tr>
                    </tbody>
                </table>
                <p class="text-danger">This action can't be undone!</p>
            </div>
            <div class="modal-footer">
                <form asp-action="ConfirmDelete" asp-controller="Tasks" asp-route-id="@Model.TaskID">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>



<div class="modal show" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>