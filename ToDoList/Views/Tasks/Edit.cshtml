@{
}

@model TaskItem;


<form class="col-12 m-auto col-md-6 col-lg-4"  method="post"
    asp-action="Edit" asp-controller="Tasks" asp-route-id="@Model.TaskID">
    
    <input type="hidden" asp-for="TaskID" />
    <input type="hidden" asp-for="StartDate" />
    <input type="hidden" asp-for="EndDate" />
    <input type="hidden" asp-for="Status" />
    <input type="hidden" asp-for="UserID" />

    <div class="mb-3">
        <label class="form-label" asp-for="TaskTitle"></label>
        <input class="form-control" asp-for="TaskTitle" />
        <span asp-validation-for="TaskTitle"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="TaskDescription"></label>
        <input class="form-control" asp-for="TaskDescription" />
        <span asp-validation-for="TaskDescription"></span>
    </div>

    <button class="btn btn-lg btn-success" type="submit">Save</button>
</form>