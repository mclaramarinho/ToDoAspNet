@model ToDoList.Models.User;

<h1>LOGIN PAGE</h1>

<form asp-action="Login" asp-controller="Users" class="col-11 m-auto m-md-0 col-md-6 col-lg-4">
    <div class="mb-3">
        <label class="form-label" asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
    </div>

    <button type="submit" class="btn btn-md btn-success">LOGIN</button>
</form>